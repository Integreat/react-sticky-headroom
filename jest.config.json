{
  "rootDir": "src/",
  "verbose": true,
  "automock": false,
  "testEnvironment": "jsdom",
  "setupFiles": [
    "<rootDir>/setupTest.js"
  ],
  "moduleFileExtensions": [
    "js"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "globals": {
    "__DEV__": false
  },
  "collectCoverageFrom": [
    "**/*.{js,jsx}"
  ],
  "coverageDirectory": "../__coverage__",
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "reporters": [ "default", "jest-junit" ]
}
